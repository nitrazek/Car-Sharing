@page
@model PawelCarSharing.Pages.RentalManagment.RentalAddModel
@{
}

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<h2>Nowe wypożyczenie</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="newRental.StartDate" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="newRental.StartDate" class="form-control">
                <span asp-validation-for="newRental.StartDate" class="text-red"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newRental.EndDate" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="newRental.EndDate" class="form-control">
                <span asp-validation-for="newRental.EndDate" class="text-red"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="car">Car:</label>
            <select id="car" name="CarId" class="form-control" required>
                @foreach (var car in Model.AvailableCars)
                {
                    <option value="@car.Id">@car.Brand - @car.Model</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="accounts">Accounts:</label>
            <select id="accounts" name="SelectedAccountIds" class="form-control" multiple required>
                @foreach (var account in Model.AvailableAccounts)
                {
                    <option value="@account.Id">@account.Login</option>
                }
            </select>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <br /><button class="btn btn btn-primary">Zatwierdź</button> <a asp-page="/RentalManagment/RentalList" class="btn btn-primary btn-large">Powrót</a>
            </div>
        </div>
    </form>
</div>