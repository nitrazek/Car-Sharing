@page
@model PawelCarSharing.Pages.AccountPanels.AccountAddModel
@{
	var accountRoleList = Html.GetEnumSelectList<PawelCarSharing.Enums.AccountRole>();

}

@if (ViewData["ErrorMessage"] != null)
{
	<p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<h2>Nowy użytkownik</h2>
<br />
<br />
<div class="container">
	<form class="form-horizontal" method="post">
		<div class="form-group">
			<label asp-for="newAccount.Login" class="control-label col-sm2"></label>
			<div class="col-sm-6">
				<input asp-for="newAccount.Login" class="form-control">
				<span asp-validation-for="newAccount.Login" class="text-red"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="newAccount.Password" class="control-label col-sm2"></label>
			<div class="col-sm-6">
				<input type="password" asp-for="newAccount.Password" class="form-control">
				<span asp-validation-for="newAccount.Password" class="text-red"></span>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm2">Powtórz hasło</label>
			<div class="col-sm-6">
				<input type="password" asp-for="passwordToCompare" class="form-control">
				<span asp-validation-for="newAccount.Password" class="text-red"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="newAccount.FirstName" class="control-label col-sm2"></label>
			<div class="col-sm-6">
				<input asp-for="newAccount.FirstName" class="form-control">
				<span asp-validation-for="newAccount.FirstName" class="text-red"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="newAccount.LastName" class="control-label col-sm2"></label>
			<div class="col-sm-6">
				<input asp-for="newAccount.LastName" class="form-control">
				<span asp-validation-for="newAccount.LastName" class="text-red"></span>
			</div>
		</div>
		 <div class="form-group">
			<label asp-for="newAccount.AccountRole" class="control-label col-sm2"></label>
			<select asp-for="newAccount.AccountRole" asp-items="accountRoleList"></select>
			<span asp-validation-for="newAccount.AccountRole" class="text-danger"></span><br /><br />
        </div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<br /><button class="btn btn btn-primary">Zatwierdź</button> <a asp-page="/AccountManagment/AccountList" class="btn btn-primary btn-large">Powrót</a>
			</div>
		</div>
	</form>
</div>